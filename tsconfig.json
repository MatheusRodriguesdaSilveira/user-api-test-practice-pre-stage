// This file is used to configure TypeScript for a Node.js 20 project.
{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 20",
  "_version": "20.1.0",

  "compilerOptions": {
    "lib": ["es2023"],
    "module": "nodenext",
    "target": "es2022",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node16",
    "isolatedModules": true,    
    "typeRoots": ["./node_modules/@types", "./src/@types"]
  },
  "include": ["src", "tests"]
}
